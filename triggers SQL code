CREATE OR REPLACE FUNCTION min_price()
RETURNS TRIGGER AS
$$ BEGIN
    SELECT pet_type FROM min_price_list MPL 
    WHERE NEW.pet_type = MPL.pet_type;
   IF NEW.price >= MPL.price
    RETURN NEW;
   ELSE
    RETURN MPL.price;
   END IF;
   END; $$
LANGUAGE plpgsql;

CREATE TRIGGER check_price
BEFORE INSERT OR UPDATE ON c_pricelist
FOR EACH ROW EXECUTE PROCEDURE min_price();

CREATE OR REPLACE FUNCTION check_availability(target_name, target_date)
RETURNS TRIGGER AS 
$$ BEGIN
    SELECT date FROM has_availability
    WHERE name == target_name
    IF EXISTS (SELECT 1 FROM has_availability WHERE date = target_date and name = target_name)
    IF date != NULL THEN
         RETURN date;
    ELSE
        RETURN NULL;
    END IF; END; $$
LANGUAGE plpqsql

